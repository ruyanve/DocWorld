
<Patch>
   <!--Change designation category of storage furniture for "Extended Storage"-->
    <!--=====Extended Storage=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Extended Storage</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/ThingDef[defName="Storage_Basket"]/designationCategory</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>Defs/ThingDef[defName="Storage_Basket"]</xpath>
                        <value>
                            <designationCategory>DZ_Storage</designationCategory>
                        </value>
                    </nomatch>
                    <match Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[defName="Storage_Basket"]/designationCategory</xpath>
                        <value>
                            <designationCategory>DZ_Storage</designationCategory>
                        </value>
                    </match>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/ThingDef[defName="Storage_HazMatContainer"]/designationCategory</xpath>
